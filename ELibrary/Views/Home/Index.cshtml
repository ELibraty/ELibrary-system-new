@model ELibrary.Models.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}
<!-- ***** Welcome Area Start ***** -->
<section class="welcome-area">
    <!-- Welcome Slides -->
    <div class="welcome-slides owl-carousel">
        <!-- Single Welcome Slide -->
        <div class="welcome-welcome-slide bg-img bg-gradient-overlay jarallax" style="background-image: url(img/bg-img/1.jpg);">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <!-- Welcome Text -->
                        <div class="welcome-text text-center">
                            <h2 data-animation="fadeInUp" data-delay="100ms">We Believe Everyone Should Have Easy Access To Great Dental Care</h2>
                            <p data-animation="fadeInUp" data-delay="300ms">
                                Вселената - някои я наричат Библиотеката. - Хорхе Луис Борхес
                            </p>
                            <div class="welcome-btn-group">
                                <a class="btn dento-btn mx-2">Вход</a>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn dento-btn mx-2" data-toggle="modal" data-target="#singUpModal">
                                    Регистрация
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Welcome Area End ***** -->

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginViewModel.Email" class="control-label"></label>
                <input asp-for="LoginViewModel.Email" value="a@abv.bg" class="form-control" />
                <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginViewModel.Password" class="control-label"></label>
                <input asp-for="LoginViewModel.Password" value="user" class="form-control" />
                <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="LoginViewModel.RememberMe">
                        <input asp-for="LoginViewModel.RememberMe" />
                        @Html.DisplayNameFor(m => m.LoginViewModel.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Влез" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>




<div class="modal fade" id="singUpModal" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog" role="document">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModal-label">Нова регистрация</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="RegisterViewModel.Email" class="control-label col-md-4"></label>
                            <input asp-for="RegisterViewModel.Email" value="a@abv.bg" class="form-control col-md-8" />
                            <span asp-validation-for="RegisterViewModel.Email" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RegisterViewModel.UserName" class="control-label col-md-4"></label>
                            <input asp-for="RegisterViewModel.UserName" value="user" class="form-control col-md-8" />
                            <span asp-validation-for="RegisterViewModel.UserName" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RegisterViewModel.Password" class="control-label col-md-4"></label>
                            <input asp-for="RegisterViewModel.Password" value="Password1!" class="form-control col-md-8" />
                            <span asp-validation-for="RegisterViewModel.Password" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RegisterViewModel.ConfirmPassword" class="control-label col-md-4"></label>
                            <input asp-for="RegisterViewModel.ConfirmPassword" value="Password1!" class="form-control col-md-8" />
                            <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <div class="control-label col-md-4">Регистрирай ме като:</div>

                            <div class="checkbox col-md-8">
                                <input type="radio" asp-for="RegisterViewModel.Type" name="Type" value="user"/>Потребител
                                <input type="radio" asp-for="RegisterViewModel.Type" name="Type" value="library" />Библиотека
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" value="Регистрирай се" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

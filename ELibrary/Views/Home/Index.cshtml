@model ELibrary.Models.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h4>IndexViewModel</h4>
<hr />

<div class="container">

    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginViewModel.Email" class="control-label"></label>
                    <input asp-for="LoginViewModel.Email" value="a@abv.bg" class="form-control" />
                    <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginViewModel.Password" class="control-label"></label>
                    <input asp-for="LoginViewModel.Password" value="user" class="form-control" />
                    <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="LoginViewModel.RememberMe">
                            <input asp-for="LoginViewModel.RememberMe" />
                            @Html.DisplayNameFor(m => m.LoginViewModel.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>


    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.Email" class="control-label"></label>
                    <input asp-for="RegisterViewModel.Email" value="a@abv.bg" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.UserName" class="control-label"></label>
                    <input asp-for="RegisterViewModel.UserName" value="user" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.Password" class="control-label"></label>
                    <input asp-for="RegisterViewModel.Password" value="Password1!" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.ConfirmPassword" class="control-label"></label>
                    <input asp-for="RegisterViewModel.ConfirmPassword" value="Password1!" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RegisterViewModel.Type" checked="checked"/> @Html.DisplayNameFor(model => model.RegisterViewModel.Type)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
